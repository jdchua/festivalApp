<% include ../partials/header %>

    <div class="row">
        <h1 class="col-12 editTitle">
            <a class="editFestival" href="/campgrounds/<%=campground._id%>"><%= campground.name %></a>
        </h1>
        <div class="row" style="width:70%; margin: 25px auto;">
            <form style="margin: auto" action="/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name of Festival</label>
                    <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>" required>
                </div>                
                <div class="form-group">
                    <label for="website">Website</label>
                    <input class="form-control" type="text" name="campground[website]" value="<%=campground.website%>">
                </div>           
                <div class="form-group">
                    <label for="genre">Genre</label>
                    <select class="form-control" name="genre">
                        <% if (campground.genre == "Electronic") { %>
                            <option>Electronic</option>
                        <% } else if (campground.genre == "Hip-Hop") { %>
                            <option>Hip-Hop</option>
                        <% } else if (campground.genre == "Variety") { %>
                            <option>Variety</option>
                        <% } else if (campground.genre == "Mixed") { %>
                            <option>Mixed</option> 
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="campground[price]" value="<%=campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image url">Image of Festival (url)</label>
                    <textarea class="form-control" name="campground[image]" rows="2" cols="70"><%= campground.image %></textarea>
                </div> 
                <div class="form-group">
                    <label for="lineup">Image of Lineup (url)</label>
                    <textarea class="form-control" name="campground[lineup]" rows="2" cols="70"><%= campground.lineup %></textarea>
                </div> 
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" name="campground[description]" rows="4" cols="70"><%= campground.description %></textarea>
                </div>                     
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%=campground.location%>">
                </div>                
                <div class="row form-group">
                    <label class="col-12"for="multiDay">Multi-Day Festival</label><br>
                    <% if (campground.multiDay === "yes") { %>
                        <!--<input id="multiday1" class="col-3" type="radio" name="campground[multiDay]" value="yes" checked><label for="multiday1" class="col-3">Yes</label>-->
                        <label class="col-3">
                            <input id="multiday1" class="col-3" type="radio" name="campground[multiDay]" value="yes" checked>
                            Yes
                        </label>
                        <label class="col-3">
                            <input id="multiday2" class="col-3" type="radio" name="campground[multiDay]" value="no">
                            No
                        </label>
                    <% } else { %>
                        <label class="col-3">
                            <input class="col-3" type="radio" name="campground[multiDay]" value="yes">
                            Yes
                        </label>
                        <label class="col-3">
                            <input class="col-3" type="radio" name="campground[multiDay]" value="no" checked>
                            No
                        </label>
                    <% } %>
                </div>                
                <div class="row form-group">
                    <label class="col-12" for="camping">Camping</label><br>
                    <% if (campground.camping === "yes") { %>
                        <label class="col-3">
                            <input class="col-3" type="radio" name="campground[camping]" value="yes" checked>
                            Yes
                        </label>
                        <label class="col-3">
                            <input class="col-3" type="radio" name="campground[camping]" value="no">
                            No
                        </label>
                    <% } else { %>
                        <label class="col-3">
                            <input class="col-3" type="radio" name="campground[camping]" value="yes">
                            Yes
                        </label>
                        <label class="col-3">
                            <input class="col-3" type="radio" name="campground[camping]" value="no" checked>
                            No
                        </label>
                    <% } %>
                </div>                
                <div class="row form-group">
                    <label class="col-12" for="allAges">All Ages</label><br>
                    <% if (campground.allAges === "yes") { %>
                        <label class="col-3">
                            <input class="col-3" type="radio" name="campground[allAges]" value="yes" checked>
                            Yes
                        </label>
                        <label class="col-3">
                            <input class="col-3" type="radio" name="campground[allAges]" value="no">
                            No
                        </label>
                    <% } else { %>
                        <label class="col-3">
                            <input class="col-3" type="radio" name="campground[allAges]" value="yes">
                            Yes
                        </label>
                        <label class="col-3">
                            <input class="col-3" type="radio" name="campground[allAges]" value="no" checked>
                            No
                        </label>
                    <% } %>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block editSubmit">SUBMIT</button>
                </div>            
            </form>
        </div>
    </div>

<% include ../partials/footer %>