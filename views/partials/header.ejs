<!DOCTYPE HTML>
<html>
    <head>
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">    
        <title>FestivalCamp</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css"> 
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/css?family=Bungee+Inline|Faster+One|Permanent+Marker|Signika|K2D|Lora:700:400,700|Concert+One" rel="stylesheet">
    </head>
    <body>
  
    <nav class="navbar navbar-default">
        <div class="centerHeader">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" id="brand" href="/campgrounds">FestivalCamp</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <li>
                  <p>
                    <form action="/campgrounds" method="GET" class="form-inline">
                      <div class="form-group">
                        <input type="text" name="search" placeholder="Search For Festivals" id="search" class="form-control"> 
                        <button type=submit class="btn searchBtn"><i class="fa fa-search" aria-hidden="true"></i></button>
                      </div>
                    </form>
                  </p>
                </li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                  <% if(!currentUser){ %>
                      <li class="headerInfo"><a href="/login">SIGN IN</a></li>
                      <li class="headerInfo"><a href="/register">REGISTER</a></li>
                  <% } else { %>
                      <li><a class="headerInfo" href="/campgrounds/new">Submit <i class="fa fa-plus-circle" aria-hidden="true"></i></a></li>
                      <li><a class="headerInfo" href="#"><i class="fa fa-user" aria-hidden="true"></i></a></li>
                      <li><a class="headerInfo" href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
                  <% } %>
              </ul>
            </div>
        </div>
    </nav>


    


